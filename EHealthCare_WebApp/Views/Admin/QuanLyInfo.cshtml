
@{
    ViewBag.Title = "QuanLyInfo";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
    List<EHealthCare_WebApp.Models.BacSiNew> bacsi = ViewData["BacSi"] as List<EHealthCare_WebApp.Models.BacSiNew>;
    List<DbEHealthcare.Entities.BacSi> oldbacsi = ViewData["OldBacSis"] as List<DbEHealthcare.Entities.BacSi>;
    int num = 1;
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
<script>
    function Tat() {
        $(".tat").remove();
    }
</script>
<p>
</p>
<table class="table">
    <tr>
        <th>
            Email
        </th>
        <th>
            Tên Bác Sĩ Cần Cập Nhật
        </th>
        <th>
            Thời gian nộp
        </th>
        <th></th>
    </tr>

    @foreach (var bs in bacsi)
    {
        <tr>
            <td style="width:200px; " >
               @bs.email
            </td>
            <td style="width:400px">
                @{ 
                    string name = oldbacsi.First(b => b.email.CompareTo(bs.email) == 0).hoten;
                }
                @name
            </td>
            <td>
                @bs.time
            </td>
            <td style="color: blue" class="">
                <div class="btn btn-success" style=""><a style="color: blue; text-decoration: none;color: white" href="/Admin/DetailUpdate?nameFile=@bs.name_file&email=@bs.email">Xem chi tiết và cập nhật</a></div>
                <div class="btn btn-danger"><a style="color: white" class="@(num)x">Xóa</a></div>
                <script>
                $(".@(num)x").on("click", function () {
                    var xacNhanXoa = $("#xacnhanxoa").clone();
                    xacNhanXoa.addClass("tat");
                    xacNhanXoa.show();
                    xacNhanXoa.find("a[name=xoa]").attr('href','@(EHealthCare_WebApp.Utils.Domain._domain)Admin/XoaFileInfo?email=@bs.email&date=@bs.time&namefile=@bs.name_file');
                    $("#diemtua").append(xacNhanXoa);
                })

                </script>
            </td>
        </tr>
        num++;
    }
</table>
<div id="diemtua">

</div>
<div id="xacnhanxoa" style="display: none">
    <label>Bạn có chắc chắn muốn xóa không?</label><br />
    <div class="btn btn-success abc" style="margin-right: 150px" onclick="Tat()">
        Cancel
    </div>
    <div class="btn btn-danger abc">
        <a name="xoa">Xóa</a>
    </div>
</div>
<style>
    #xacnhanxoa {
        position: absolute;
        width: 330px;
        height: 100px;
        background-color: aquamarine;
        display: block;
        padding: 15px;
    }

    .abc {
        float: left;
        text-decoration: none;
    }
